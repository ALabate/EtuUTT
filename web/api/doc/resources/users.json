{
    "basePath": "http://openutt.utt.fr/api--default-api-version",
    "resourcePath": "users",
    "apis": [
        {
            "path": "/users/search/{term}/{sortExpression}/{page}",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Search users",
                    "nickname": "findUsers",
                    "responseClass": "User",
                    "parameters": [
                        {
                            "name": "term",
                            "description": "Term to search",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "path",
                            "required": true
                        },
                        {
                            "name": "sortExpression",
                            "description": "Expression to sort users. See documentation about SortingExpressions.",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "path",
                            "required": false,
                            "defaultValue": "lastname:asc,firstname:asc"
                        },
                        {
                            "name": "page",
                            "description": "Page number",
                            "allowMultiple": false,
                            "dataType": "int",
                            "paramType": "path",
                            "required": false,
                            "defaultValue": "1"
                        }
                    ],
                    "notes": "Return a paginated list of all the users using a sorting expression matching given contraints"
                }
            ],
            "description": "Operations about users"
        },
        {
            "path": "/users/{sortExpression}/{page}",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "List all the users",
                    "nickname": "getAllUsers",
                    "responseClass": "User",
                    "parameters": [
                        {
                            "name": "sortExpression",
                            "description": "Expression to sort users. See documentation about SortingExpressions.",
                            "allowMultiple": false,
                            "dataType": "string",
                            "paramType": "path",
                            "required": false,
                            "defaultValue": "lastname:asc,firstname:asc"
                        },
                        {
                            "name": "page",
                            "description": "Page number",
                            "allowMultiple": false,
                            "dataType": "int",
                            "paramType": "path",
                            "required": false,
                            "defaultValue": "1"
                        }
                    ],
                    "notes": "Return a paginated list of all the users using a sorting expression"
                }
            ],
            "description": "Operations about users"
        }
    ],
    "models": {
        "User": {
            "id": "User",
            "properties": {
                "id": {
                    "type": "int",
                    "description": "Unique identifier for the user",
                    "required": true
                },
                "login": {
                    "type": "string",
                    "description": "CAS login",
                    "required": true
                },
                "studentId": {
                    "type": "int",
                    "description": "Student identifier",
                    "required": true
                },
                "mail": {
                    "type": "string",
                    "description": "UTT e-mail",
                    "required": true
                },
                "fullName": {
                    "type": "string",
                    "description": "Full name",
                    "required": true
                },
                "firstName": {
                    "type": "string",
                    "description": "First name",
                    "required": true
                },
                "lastName": {
                    "type": "string",
                    "description": "Last name",
                    "required": true
                },
                "formation": {
                    "type": "string",
                    "description": "Formation",
                    "required": true,
                    "allowableValues": {
                        "valueType": "LIST",
                        "values": [
                            "Ing\u00e9nieur",
                            "Master",
                            "Doctorat"
                        ]
                    }
                },
                "branch": {
                    "type": "string",
                    "description": "Formation branch",
                    "required": true,
                    "allowableValues": {
                        "valueType": "LIST",
                        "values": [
                            "Ing\u00e9nieur",
                            "Master",
                            "Doctorat"
                        ]
                    }
                },
                "level": {
                    "type": "string",
                    "description": "Formation level (1, 2, ...)",
                    "required": true
                },
                "speciality": {
                    "type": "string",
                    "description": "If user is in branch, his/her speciality",
                    "required": true
                },
                "isStudent": {
                    "type": "boolean",
                    "required": true
                },
                "picture": {
                    "type": "string",
                    "required": true
                },
                "website": {
                    "type": "string",
                    "required": true
                },
                "facebook": {
                    "type": "string",
                    "required": true
                },
                "twitter": {
                    "type": "string",
                    "required": true
                },
                "linkedin": {
                    "type": "string",
                    "required": true
                },
                "viadeo": {
                    "type": "string",
                    "required": true
                }
            }
        }
    }
}