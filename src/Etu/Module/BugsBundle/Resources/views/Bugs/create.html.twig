{% extends '::page-2cols.html.twig' %}

{% block title %}{{ 'bugs.bugs.create.title'|trans }}{% endblock %}

{% block titleIcon %}
    <img src="{{ asset('src/img/titles/bugs.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block content %}
    <ul class="nav nav-tabs page-tabs">
        <li>
            <a href="{{ path('bugs_index') }}">{{ 'bugs.bugs.state.opened'|trans }}</a>
        </li>
        <li>
            <a href="{{ path('bugs_closed') }}">{{ 'bugs.bugs.state.resolved'|trans }}</a>
        </li>
        <li class="pull-right active page-tabs-resolved-active">
            <a href="{{ path('bugs_create') }}">
                <i class="icon-plus"></i>
                {{ 'bugs.bugs.create.title'|trans }}
            </a>
        </li>
    </ul>

    <div class="padding20-sides">
        <form method="post" action="">
            <div class="control-group">
                <label class="control-label">{{ form_label(form.title, 'bugs.bugs.create.name'|trans) }}</label>
                <div class="controls">
                    {{ form_widget(form.title) }}
                    <span class="help-block">{{ form_errors(form.title) }}</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">{{ form_label(form.criticality, 'bugs.bugs.create.criticality'|trans) }}</label>
                <div class="controls">
                    {{ form_widget(form.criticality) }}
                    <span class="help-block">{{ form_errors(form.criticality) }}</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    {{ form_label(form.body, 'bugs.bugs.create.body'|trans) }}
                    {% include 'EtuModuleUploadBundle::upload_link.html.twig' %}
                </label>
                <div class="controls">
                    {{ form_widget(form.body, {'attr': {'class': 'bugs-view-comment-textarea redactor'}}) }}
                    <span class="help-block">{{ form_errors(form.body) }}</span>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    {{ form_rest(form) }}

                    <button type="submit" class="btn">{{ 'bugs.bugs.create.submit'|trans }}</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
