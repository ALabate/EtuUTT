
<a href="{{ path('bugs_view', {'id': notif.firstEntity.issue.id, 'slug': notif.firstEntity.issue.title|slugify}) }}"
   class="notif{% if notif.isSuper %} super-notif{% elseif notif.isNew %} notif-new{% endif %}">
	<img src="{{ asset('img/notifs/bug.png') }}" />

	<h4 class="notif-title">
		{% if app.user.id == notif.firstEntity.issue.user.id %}
			{{ 'bugs.notifs.newComment.your'|trans({
				'%userName%': notif.firstEntity.user.fullName,
				'%bugName%': notif.firstEntity.issue.title
			})|raw }}
		{% else %}
			{{ 'bugs.notifs.newComment.other'|trans({
				'%userName%': notif.firstEntity.user.fullName,
				'%bugName%': notif.firstEntity.issue.title
			})|raw }}
		{% endif %}
	</h4>

	<div class="notif-date">
		{{ time_diff(notif.date)|ucfirst }}
	</div>

	<div class="clear"></div>
</a>