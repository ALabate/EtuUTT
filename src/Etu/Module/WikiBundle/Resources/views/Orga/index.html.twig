{% extends '::page-2cols.html.twig' %}

{% block title %}{{ 'wiki.orga.index.title'|trans({'%name%': orga.name}) }}{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/bundles/wiki.css') }}" type="text/css" />
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('js/bundles/wiki.js') }}"></script>
{% endblock %}

{% block titleIcon %}
	<img src="{{ asset('img/titles/wiki.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block content %}
	<ul class="nav nav-tabs page-tabs">
		<li>
			<a href="{{ path('wiki_index') }}">{{ 'wiki.menu.index'|trans }}</a>
		</li>
		{% if wiki_can_edit_permissions(app.user, page) %}
			<li class="pull-right">
				<a href="{{ path('wiki_orga_permissions', {'login': orga.login}) }}">{{ 'wiki.menu.permissions'|trans }}</a>
			</li>
		{% endif %}
		{% if wiki_can_edit(app.user, page) %}
			<li class="pull-right">
				<a href="{{ path('wiki_orga_edit', {'login': orga.login}) }}">{{ 'wiki.menu.edit'|trans }}</a>
			</li>
		{% endif %}
		<li class="pull-right active page-tabs-resolved-active">
			<a href="{{ path('wiki_orga_index', {'login': orga.login}) }}">{{ 'wiki.menu.read'|trans }}</a>
		</li>
	</ul>

	<div class="padding20-sides">
		<div class="row-fluid">
			<div class="span3 wiki-categories">
				<ul class="nav nav-list">
					<li class="nav-header">{{ 'wiki.orga.index.title'|trans({'%name%': orga.name}) }}</li>
				</ul>

				<div class="wiki-actions">
					<div class="wiki-action btn-group">
						<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
							{{ 'wiki.orga.index.create'|trans }}
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li><a href="">{{ 'wiki.orga.index.create_category'|trans }}</a></li>
							<li><a href="">{{ 'wiki.orga.index.create_page'|trans }}</a></li>
						</ul>
					</div>

					<div class="wiki-action">
						<a class="btn" href="#">
							{{ 'wiki.orga.index.edit'|trans }}
						</a>
					</div>

					<div class="clear"></div>
				</div>

				<div class="wiki-tree">
					<ul class="wiki-nested-list wiki-nested-list-depth-0">
						{% for page in tree.pages %}
							<li class="wiki-nested-item">
								<a href="" class="wiki-nested-link-page">
									{{ page.title }}
								</a>
							</li>
						{% endfor %}
					</ul>

					{% include 'EtuModuleWikiBundle:Tree:children.html.twig' with {
						'tree': tree.categories,
						'currentPage': page,
						'orga': orga,
						'depth': 0
					} %}
				</div>
			</div>

			<div class="span9">
				{{ page.revision.body|raw }}
			</div>
		</div>
	</div>
{% endblock %}