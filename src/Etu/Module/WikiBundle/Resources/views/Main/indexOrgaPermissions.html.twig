{% extends '::page-2cols.html.twig' %}

{% block title %}{{ 'wiki.main.indexOrgaPermissions.title'|trans }}{% endblock %}

{% block titleIcon %}
	<img src="{{ asset('img/titles/wiki.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block content %}
	<ul class="nav nav-tabs page-tabs">
		<li>
			<a href="{{ path('wiki_index') }}">{{ 'wiki.main.menu.index'|trans }}</a>
		</li>
		{% if wiki_can_edit_permissions(app.user, page) %}
		<li class="pull-right active page-tabs-resolved-active">
			<a href="{{ path('wiki_index_orga_permissions', {'login': orga.login}) }}">{{ 'wiki.main.menu.permissions'|trans }}</a>
		</li>
		{% endif %}
		{% if wiki_can_edit(app.user, page) %}
		<li class="pull-right">
			<a href="{{ path('wiki_index_orga_edit', {'login': orga.login}) }}">{{ 'wiki.main.menu.edit'|trans }}</a>
		</li>
		{% endif %}
		<li class="pull-right">
			<a href="{{ path('wiki_index_orga', {'login': orga.login}) }}">{{ 'wiki.main.menu.read'|trans }}</a>
		</li>
	</ul>

	<div class="padding20-sides">
		<p class="alert alert-info">
			Cette page est publique et ne peut pas être cachée.
		</p>

		<form method="post" action="">
			<div class="row-fluid">
				<div class="control-group span6">
					{{ form_label(form.levelToEdit, 'Qui peut modifier cette page ?') }}
					{{ form_widget(form.levelToEdit, {'attr': {'class': 'span10'} }) }}
					<span class="help-block">{{ form_errors(form.levelToEdit) }}</span>
				</div>
				<div class="control-group span6">
					{{ form_label(form.levelToEditPermissions, 'Qui peut modifier les permissions de cette page ?') }}
					{{ form_widget(form.levelToEditPermissions, {'attr': {'class': 'span10'} }) }}
					<span class="help-block">{{ form_errors(form.levelToEditPermissions) }}</span>
				</div>
			</div>
			<div class="row-fluid">
				<div class="control-group span6">
					{{ form_label(form.levelToCreate, 'Qui peut créer des pages et des catégories dans le wiki ?') }}
					{{ form_widget(form.levelToCreate, {'attr': {'class': 'span10'} }) }}
					<span class="help-block">{{ form_errors(form.levelToCreate) }}</span>
				</div>
				<div class="control-group span6">
					{{ form_label(form.levelToDelete, 'Qui peut supprimer des pages et des catégories dans le wiki ?') }}
					{{ form_widget(form.levelToDelete, {'attr': {'class': 'span10'} }) }}
					<span class="help-block">{{ form_errors(form.levelToDelete) }}</span>
				</div>
			</div>

			{{ form_rest(form) }}

			<button type="submit" class="btn btn-primary">{{ 'wiki.main.indexOrgaPermissions.submit'|trans }}</button>
		</form>
	</div>
{% endblock %}