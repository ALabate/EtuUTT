{% extends '::page-2cols.html.twig' %}

{% block title %}{{ 'wiki.main.indexOrgaEdit.title'|trans }}{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/bundles/wiki.css') }}" type="text/css" />
{% endblock %}

{% block titleIcon %}
	<img src="{{ asset('img/titles/wiki.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block content %}
	<ul class="nav nav-tabs page-tabs">
		<li>
			<a href="{{ path('wiki_index') }}">{{ 'wiki.main.menu.index'|trans }}</a>
		</li>
		{% if wiki_can_edit_permissions(app.user, page) %}
			<li class="pull-right">
				<a href="{{ path('wiki_index_orga_permissions', {'login': orga.login}) }}">{{ 'wiki.main.menu.permissions'|trans }}</a>
			</li>
		{% endif %}
		{% if wiki_can_edit(app.user, page) %}
			<li class="pull-right active page-tabs-resolved-active">
				<a href="{{ path('wiki_index_orga_edit', {'login': orga.login}) }}">{{ 'wiki.main.menu.edit'|trans }}</a>
			</li>
		{% endif %}
		<li class="pull-right">
			<a href="{{ path('wiki_index_orga', {'login': orga.login}) }}">{{ 'wiki.main.menu.read'|trans }}</a>
		</li>
	</ul>

	<div class="padding20-sides">

		<div class="row-fluid">
			<div class="span3 wiki-categories">
				<ul class="nav nav-list">
					<li class="nav-header">Révisions</li>
					{% for revision in revisions %}
						{% if page.revision.id == revision.id %}
							<li class="active">
						{% else %}
							<li>
						{% endif %}
								<a href="" class="tip"
									{% if revision.comment and revision.user %}
										title="{{ revision.comment }}, par {{ revision.user.fullName }}"
									{% elseif revision.comment and not revision.user %}
										title="{{ revision.comment }}"
									{% elseif not revision.comment and revision.user %}
										title="Par {{ revision.user.fullName }}"
									{% endif %}
										>
									{{ time_diff(revision.date)|ucfirst }}
								</a>
							</li>
					{% endfor %}
				</ul>
			</div>

			<div class="span9">
				<form method="post" action="">
					{{ form_widget(form.title, {'attr': {'class': 'span12 wiki-edit-title'} }) }}
					<span class="help-block">{{ form_errors(form.body) }}</span>

					{{ form_widget(form.body) }}
					<span class="help-block">{{ form_errors(form.body) }}</span>

					<div class="control-group">
						{{ form_label(form.comment, 'Commentaire décrivant vos modifications') }}
						{{ form_widget(form.comment, {'attr': {'class': 'span12'} }) }}
						<span class="help-block">{{ form_errors(form.body) }}</span>
					</div>

					{{ form_rest(form) }}

					<button type="submit" class="btn btn-primary">{{ 'wiki.main.indexOrgaEdit.submit'|trans }}</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}