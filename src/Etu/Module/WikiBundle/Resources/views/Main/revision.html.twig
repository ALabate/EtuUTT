{% extends '::page-2cols.html.twig' %}

{% block title %}{{ 'wiki.main.revision.title'|trans }}{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/bundles/wiki.css') }}" type="text/css" />
{% endblock %}

{% block titleIcon %}
	<img src="{{ asset('img/titles/wiki.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block content %}
	<ul class="nav nav-tabs page-tabs">
		<li>
			<a href="{{ path('wiki_index') }}">{{ 'wiki.menu.index'|trans }}</a>
		</li>

		{% if wiki_can_edit(app.user, page) %}
			<li class="pull-right active page-tabs-resolved-active">
				<a href="{{ path('wiki_index_edit') }}">{{ 'wiki.menu.edit'|trans }}</a>
			</li>
			<li class="pull-right">
				<a href="{{ path('wiki_index') }}">{{ 'wiki.menu.read'|trans }}</a>
			</li>
		{% endif %}
	</ul>

	<div class="padding20-sides">
		<div class="row-fluid">
			<div class="span3 wiki-categories">
				<ul class="nav nav-list">
					<li class="nav-header">{{ 'wiki.main.revision.revisions'|trans }}</li>
					{% for revision in revisions %}
						{% if page.revision.id == revision.id %}
							<li>
								<a href="{{ path('wiki_index_edit') }}" class="tip"
										{% if revision.comment and revision.user %}
											title="{{ revision.comment }}, {{ 'wiki.main.revision.by'|trans~' '~revision.user.fullName }}"
										{% elseif revision.comment and not revision.user %}
											title="{{ revision.comment }}"
										{% elseif not revision.comment and revision.user %}
											title="{{ 'wiki.main.revision.by'|trans|ucfirst~' '~revision.user.fullName }}"
										{% endif %}
										>
									{{ time_diff(revision.date)|ucfirst }}
								</a>
							</li>
						{% elseif currentRevision.id == revision.id %}
							<li class="active">
								<a href="#" class="tip"
										{% if revision.comment and revision.user %}
											title="{{ revision.comment }}, {{ 'wiki.main.revision.by'|trans~' '~revision.user.fullName }}"
										{% elseif revision.comment and not revision.user %}
											title="{{ revision.comment }}"
										{% elseif not revision.comment and revision.user %}
											title="{{ 'wiki.main.revision.by'|trans|ucfirst~' '~revision.user.fullName }}"
										{% endif %}
										>
									{{ time_diff(revision.date)|ucfirst }}
								</a>
							</li>
						{% else %}
							<li>
								<a href="{{ path('wiki_index_revision', {'id': revision.id}) }}" class="tip"
										{% if revision.comment and revision.user %}
											title="{{ revision.comment }}, {{ 'wiki.main.revision.by'|trans~' '~revision.user.fullName }}"
										{% elseif revision.comment and not revision.user %}
											title="{{ revision.comment }}"
										{% elseif not revision.comment and revision.user %}
											title="{{ 'wiki.main.revision.by'|trans|ucfirst~' '~revision.user.fullName }}"
										{% endif %}
										>
									{{ time_diff(revision.date)|ucfirst }}
								</a>
							</li>
						{% endif %}
					{% endfor %}
				</ul>
			</div>

			<div class="span9">
				<div class="wiki-revision-infos muted">
					<p>
						<em>{{ currentRevision.comment }}</em>
					</p>
					<p>
						<em>{{ currentRevision.date|date('d/m/Y H:i') }}</em>
					</p>
				</div>

				<hr />

				{{ currentRevision.body|raw }}

				<hr />

				<p>
					<a href="{{ path('wiki_index_revision', {'id': currentRevision.id, 'confirm': 'confirm'}) }}" class="btn btn-primary">
						{{ 'wiki.main.revision.submit'|trans }}
					</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %}