{% extends '::base.html.twig' %}

{% block title %}{{ 'buckutt.main.index.title'|trans }}{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/bundles/buckutt.css') }}" type="text/css" />
{% endblock %}

{% block page %}
	<section class="page">
		<div class="container page-container">
			<h2 class="page-title source-sans-pro">
				<img src="{{ asset('img/titles/buckutt.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />

				{{ block('title') }}
			</h2>

			{% if message %}
				<div class="page-alert-mobile alert alert-{{ message.type }}">
					{{ message.message|trans }}
				</div>
			{% endif %}

			<div class="content content-connect">
				<div class="padding20-all">
					{% if not app.user.keepActive %}
					<form method="post" action="{{ path('buckutt_connect') }}">
						<h4>{{ 'buckutt.main.connect.ask'|trans }}</h4>

						<br />

						{{ form_widget(form.pin, {'attr': {'class': 'connect-pin'} }) }}

						<br />

						<div class="buckutt-connect-submit">
							{{ form_rest(form) }}
							<p>
								<a href="{{ path('buckutt_connect', {'action':'lostPin'}) }}">
									{{ 'buckutt.main.connect.lostPin'|trans }}
								</a>
							</p>
							<button type="submit" class="btn btn-primary">
								{{ 'buckutt.main.connect.connect'|trans }}
							</button>
						</div>
					</form>

					<hr />

					<p class="alert alert-danger buckutt-explainations">
						{{ 'buckutt.main.connect.warnings.1'|trans }}
					</p>
					<p class="alert alert-info buckutt-explainations">
						{{ 'buckutt.main.connect.warnings.2'|trans }}
					</p>

					<p class="buckutt-explainations">
						{{ 'buckutt.main.connect.explainations.1'|trans }}
					</p>
					<p class="buckutt-explainations">
						{{ 'buckutt.main.connect.explainations.2'|trans }}
					</p>
					<p class="buckutt-explainations">
						{{ 'buckutt.main.connect.explainations.3'|trans }}
					</p>
					{% else %}
					<p class="alert alert-info">
						{{ 'buckutt.main.connect.notStudent'|trans }}
					</p>
					{% endif %}
				</div>

				<div class="clear"></div>
			</div>

		</div>
	</section>

	<footer class="container footer-bottom">
		<p>
			<a href="#" class="footer-link change-locale">
				{{ 'base.footer.change_locale'|trans }}
			</a>
			<a href="" id="next-change-locale-link" class="footer-link">
				{{ 'base.footer.legalities'|trans }}
			</a>
			<a href="" class="footer-link">
				{{ 'base.footer.help_us'|trans }}
			</a>
			<a href="" class="footer-link">
				{{ 'base.footer.developers'|trans }}
			</a>
			<span class="pull-right">
				{{ 'base.footer.1col_text'|trans|raw }} - {% include '::version.html.twig' %}
			</span>
		</p>
	</footer>
{% endblock %}
