{% extends '::page-2cols.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/bundles/assos.css') }}" type="text/css" />
{% endblock %}

{% block title %}{{ 'assos.main.index.title'|trans }}{% endblock %}

{% block main_menu_link_assos %} active{% endblock %}

{% block titleIcon %}
	<img src="{{ asset('img/titles/assos.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block content %}
	<div class="padding20-all">
		{# display navigation #}
		<div class="navigation">
			{{ knp_pagination_render(pagination) }}
		</div>

		{% for key, orga in pagination %}
			<a href="{{ path('orgas_view', {'login': orga.login}) }}" class="asso{% if key == 0 %} asso-first{% endif %}">
				<img src="{{ asset('logos/'~orga.logo) }}" alt="{{ orga.name }}" title="{{ orga.name }}" class="asso-logo" />

				<h5 class="asso-name asso-info">
					{{ orga.name }}
				</h5>

				{% if orga.president %}
					<p class="muted asso-info">{{ 'assos.main.index.president'|trans }}: {{ orga.president.fullName }}</p>
				{% endif %}

				<p class="muted asso-info hidden-phone">{{ orga.descriptionShort }}</p>

				<div class="clear"></div>
			</a>
		{% endfor %}

		{# display navigation #}
		<div class="navigation">
			{{ knp_pagination_render(pagination) }}
		</div>
	</div>
{% endblock %}
