{% extends '::page-2cols.html.twig' %}

{% block title %}{{ 'events.main.view.title'|trans }}{% endblock %}

{% block meta_desc %}{{ event.title }}, le {{ event.begin|date('d/m/Y Ã  H:i') }}, {{ event.location }}{% endblock %}

{% block titleIcon %}
	<img src="{{ asset('src/img/titles/events.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block sidebar %}
	{% if app.user %}
		{{ render_subscribe_button('event', event.id) }}
	{% endif %}

	{{ parent() }}
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('vendor/fullcalendar/fullcalendar.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('vendor/fullcalendar/fullcalendar.min.js') }}" type="text/javascript"></script>
	<script type="text/javascript">
		var source = '{{ path('events_index') }}';
		var currentDate = new Date();

		var 	monthNames = [
					'{{ 'events.main.months.jan'|trans }}',
					'{{ 'events.main.months.feb'|trans }}',
					'{{ 'events.main.months.mar'|trans }}',
					'{{ 'events.main.months.apr'|trans }}',
					'{{ 'events.main.months.may'|trans }}',
					'{{ 'events.main.months.jun'|trans }}',
					'{{ 'events.main.months.jul'|trans }}',
					'{{ 'events.main.months.aug'|trans }}',
					'{{ 'events.main.months.sep'|trans }}',
					'{{ 'events.main.months.oct'|trans }}',
					'{{ 'events.main.months.nov'|trans }}',
					'{{ 'events.main.months.dec'|trans }}'
				],
				monthNamesShort = [
					'{{ 'events.main.monthsShort.jan'|trans }}',
					'{{ 'events.main.monthsShort.feb'|trans }}',
					'{{ 'events.main.monthsShort.mar'|trans }}',
					'{{ 'events.main.monthsShort.apr'|trans }}',
					'{{ 'events.main.monthsShort.may'|trans }}',
					'{{ 'events.main.monthsShort.jun'|trans }}',
					'{{ 'events.main.monthsShort.jul'|trans }}',
					'{{ 'events.main.monthsShort.aug'|trans }}',
					'{{ 'events.main.monthsShort.sep'|trans }}',
					'{{ 'events.main.monthsShort.oct'|trans }}',
					'{{ 'events.main.monthsShort.nov'|trans }}',
					'{{ 'events.main.monthsShort.dec'|trans }}'
				],
				dayNames = [
					'{{ 'events.main.days.sun'|trans }}',
					'{{ 'events.main.days.mon'|trans }}',
					'{{ 'events.main.days.tue'|trans }}',
					'{{ 'events.main.days.wed'|trans }}',
					'{{ 'events.main.days.thu'|trans }}',
					'{{ 'events.main.days.fri'|trans }}',
					'{{ 'events.main.days.sat'|trans }}'
				],
				dayNamesShort = [
					'{{ 'events.main.daysShort.sun'|trans }}',
					'{{ 'events.main.daysShort.mon'|trans }}',
					'{{ 'events.main.daysShort.tue'|trans }}',
					'{{ 'events.main.daysShort.wed'|trans }}',
					'{{ 'events.main.daysShort.thu'|trans }}',
					'{{ 'events.main.daysShort.fri'|trans }}',
					'{{ 'events.main.daysShort.sat'|trans }}'
				];
	</script>
	<script src="{{ asset('src/js/bundles/events.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
	<ul class="nav nav-tabs page-tabs">
		<li>
			<a href="{{ path('events_index') }}">
				<i class="icon-chevron-left"></i>
				{{ 'events.main.view.back'|trans }}
			</a>
		</li>
		{% if app.user and app.user.isStudent %}
			<li class="pull-right">
				<a href="{{ path('events_members', {'id': event.id, 'slug': event.title|slugify}) }}">
					{{ 'events.main.view.menu.subscribers'|trans }}
				</a>
			</li>
			<li class="active page-tabs-resolved-active pull-right">
				<a href="{{ path('events_view', {'id': event.id, 'slug': event.title|slugify}) }}">
					{{ 'events.main.view.menu.description'|trans }}
				</a>
			</li>
		{% endif %}
	</ul>

	<div class="padding20-sides">
		{% if app.user and app.user.isStudent %}
		<div class="pull-right">
			<div class="btn-group">
				<a class="btn dropdown-toggle" id="subscriber_button" data-event-id="{{ event.id }}" data-toggle="dropdown" href="#">
					<img src="{{ asset('src/img/loader.gif') }}" id="subscriber_loader" style="display: none;" />

					<span id="subscriber_current">
						{% if userAnswer %}
							{{ ('events.main.subscribers.'~userAnswer.answer)|trans }}
						{% else %}
							{{ 'events.main.view.willYouCome'|trans }}
						{% endif %}
					</span>

					<span class="caret"></span>
				</a>
				<ul class="dropdown-menu">
					<li>
						<a href="#" id="subscriber_yes">{{ 'events.main.subscribers.yes'|trans }}</a>
					</li>
					<li>
						<a href="#" id="subscriber_probably">{{ 'events.main.subscribers.probably'|trans }}</a>
					</li>
					<li>
						<a href="#" id="subscriber_no">{{ 'events.main.subscribers.no'|trans }}</a>
					</li>
				</ul>
			</div>
		</div>
		{% endif %}

		<h3>{{ event.title }}</h3>

		<div class="event-view-orga-logo">
			<img src="{{ asset('uploads/events/'~event.id~'.png') }}" alt="{{ event.title }}" title="{{ event.title }}" />
		</div>

		<div class="event-view-infos">
			<p class="muted event-view-category">
				{{ 'events.main.view.in'|trans({'%category%': ('events.categories.'~event.category)|trans}) }},
				{{ 'events.main.view.by'|trans }}
				{% if etu.modules.isEnabled('assos') %}
					<a href="{{ path('orgas_view', {'login': event.orga.login}) }}">
						{{ event.orga.name }}
					</a>
				{% else %}
					{{ event.orga.name }}
				{% endif %}
			</p>
			<div class="row-fluid">
				<div class="span1"></div>
				<div class="span1">
					<p>
						{% if useOn %}
							<strong>{{ 'events.main.view.on'|trans }}</strong>
						{% else %}
							<strong>{{ 'events.main.view.start'|trans }}</strong>
							<br />
							<strong>{{ 'events.main.view.end'|trans }}</strong>
						{% endif %}
						<br />
						<strong>{{ 'events.main.view.location'|trans }}</strong>
					</p>
				</div>
				<div class="span3">
					<p>
						{% if useOn %}
							{{ event.begin|date('d/m/Y') }}
						{% else %}
							{{ event.begin|date('d/m/Y H:i') }}
							<br />
							{{ event.end|date('d/m/Y H:i') }}
						{% endif %}
						<br />
						{{ event.location }}
					</p>
				</div>
				<div class="span3 event-view-count-members">
					<h4 class="event-view-count-members-number" id="count-yes">{{ answersYesCount }}</h4>
					<p class="event-view-count-members-sentence muted">
						{{ 'events.main.subscribers.yes'|trans }}
					</p>
				</div>
				<div class="span3 event-view-count-members">
					<h4 class="event-view-count-members-number" id="count-probably">{{ answersProbablyCount }}</h4>
					<p class="event-view-count-members-sentence muted">
						{{ 'events.main.subscribers.probably'|trans }}
					</p>
				</div>
				<div class="span1"></div>
			</div>
		</div>

		<div class="clear"></div>

		<hr />

		<div class="description">
			{{ event.description|bbcode_filter('default_filter') }}
		</div>
	</div>
{% endblock %}
