<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8" />

		<title>{% block title %}{{ 'upload.main.index.title'|trans }}{% endblock %} - {{ 'base.title'|trans }}</title>

		<meta name="description" content="{{ 'upload.main.index.title'|trans }}" />

		<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" />
		<link rel="stylesheet" href="{{ asset('min/etuutt.css') }}" type="text/css" />
	</head>
	<body class="upload-page">
		{% set message = false %}

		{% if app.session.flashBag.has('message') %}
			{% set message = app.session.flashBag.get('message') %}

			<div class="alert alert-{{ message.type }} hidden-for-1024">
				{{ message.message|trans }}
			</div>
		{% endif %}

		{% block body %}{% endblock %}

		<script src="//code.jquery.com/jquery-1.9.1.js" type="text/javascript"></script>

		{% block javascripts %}{% endblock %}
	</body>
</html>
