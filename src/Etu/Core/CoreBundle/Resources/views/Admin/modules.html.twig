{% extends 'EtuCoreBundle:Admin:layout.html.twig' %}

{% block title %}{{ 'admin.modules.title'|trans }}{% endblock %}

{% block titleIcon %}
	<img src="{{ asset('img/titles/gear.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block content %}
	<div class="padding20-all">
		<form method="post" action="">
			<table class="table table-hover">
				<thead>
				<tr>
					<th style="width: 50px;">#</th>
					<th>Nom</th>
					<th class="hidden-phone">Auteur</th>
					<th class="hidden-phone">Description</th>
				</tr>
				</thead>
				<tbody>
				{% for module in modules %}
					<tr {% if not module.isReadyToUse %}class="muted"{% endif %}>
						<td>
							{% if module.isReadyToUse %}
								<input type="checkbox" name="modules[{{ module.identifier }}]" {% if module.enabled %} checked="checked"{% endif %} />
							{% else %}
								<input type="checkbox" disabled="disabled" />
							{% endif %}
						</td>
						<td>{{ module.title }}</td>
						<td>{{ module.author }}</td>
						<td class="hidden-phone">
							{{ module.description }}
							{% if not module.isReadyToUse %}
								<br /><span class="text-warning">Ce module n'est pas prêt à être utilisé.</span>
							{% endif %}
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>

			<button type="sumbit" class="btn">Activer/désactiver</button>
		</form>
	</div>
{% endblock %}