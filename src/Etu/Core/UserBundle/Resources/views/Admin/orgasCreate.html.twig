{% extends 'EtuCoreBundle:Admin:layout.html.twig' %}

{% block title %}{{ 'user.admin.orgasCreate.title'|trans }}{% endblock %}

{% block titleIcon %}
	<img src="{{ asset('img/titles/gear.png') }}" alt="{{ 'base.logo.alt'|trans }}" title="{{ 'base.logo.title'|trans }}" class="page-title-icon" />
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/bundles/user.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
	<ul class="nav nav-tabs page-tabs">
		<li>
			<a href="{{ path('admin_orgas_index') }}">
				<i class="icon-chevron-left"></i>
				{{ 'user.admin.orgasCreate.back'|trans }}
			</a>
		</li>
	</ul>

	<div class="padding20-sides">
		<form method="post">
			{{ form_errors(form) }}

			<div class="row-fluid">
				<div class="span3"></div>
				<div class="span9">
					<div class="form-horizontal">
						<div class="control-group">
							<label class="control-label">{{ form_label(form.login, 'user.admin.orgasCreate.login'|trans) }}</label>
							<div class="controls">
								{{ form_widget(form.login) }}
								<span class="help-block">{{ form_errors(form.login) }}</span>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label">{{ form_label(form.name, 'user.admin.orgasCreate.name'|trans) }}</label>
							<div class="controls">
								{{ form_widget(form.name) }}
								<span class="help-block">{{ form_errors(form.name) }}</span>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label">{{ form_label(form.login, 'user.admin.orgasCreate.descriptionShort'|trans) }}</label>
							<div class="controls">
								{{ form_widget(form.descriptionShort) }}
								<span class="help-block">{{ form_errors(form.descriptionShort) }}</span>
							</div>
						</div>
						<div class="control-group">
							<div class="controls">
								{{ form_rest(form) }}

								<button type="submit" class="btn">{{ 'user.admin.orgasCreate.submit'|trans }}</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
{% endblock %}