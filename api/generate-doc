<?php

passthru(
	'"bin/swagger" -p "src/" -o "web/api/doc" '
	.'--default-base-path "http://openutt.utt.fr/api"'
);

$content = file_get_contents(__DIR__.'/../web/api/doc/api-docs.json');
$content = str_replace('"swaggerVersion": null,', '"swaggerVersion": null,
    "basePath": "http://openutt.utt.fr/api/doc",', $content);

file_put_contents(__DIR__.'/../web/api/doc/api-docs.json', $content);
